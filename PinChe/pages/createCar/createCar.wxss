.space{
  background: #f5f5f5;
  display:block;
  
  border: 1px solid #ddd;
  margin: -1px 0;
  padding:20rpx
}

.wa-input{
    display: block;
    height: 34px;
    color: #111;
    font-size: 14px;
    line-height: 16px;
    flex: 1;
}

.wa-input-item{
  display: flex;
  padding:20rpx;
  border: 1px solid #ddd;
  margin: -1px 0; 
}
.wa-input-label{
  flex: 0 0 100px;
  font-size: 14px;
  line-height: 26px;
  font-weight: bold;
  padding: 4px 0;
}

.btn-area{
  align-items:flex-start;
  justify-content: flex-start;
  margin: 10rpx;
  padding:20rpx
}
.btn-submit{
  min-height: 100rpx;
  margin: 10rpx;
}